# ============================================
# CitizenSpace Environment Variables
# ============================================

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CitizenSpace

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Database Connection (for migrations)
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# ZeroDB Configuration (Decentralized Database)
ZERODB_URL=https://your-zerodb-instance-url.com
ZERODB_API_KEY=your-zerodb-api-key
ZERODB_DATABASE_ID=your-zerodb-database-id

# --------------------------------------------
# Stripe Payment Processing
# --------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_HOT_DESK_HOURLY=price_your_hot_desk_price_id
STRIPE_PRICE_ID_MEMBERSHIP_BASIC=price_your_basic_membership_price_id
STRIPE_PRICE_ID_MEMBERSHIP_PREMIUM=price_your_premium_membership_price_id
STRIPE_PRICE_ID_MEMBERSHIP_ENTERPRISE=price_your_enterprise_membership_price_id

# --------------------------------------------
# Blockchain & Web3 Configuration
# --------------------------------------------
# WalletConnect Project ID (get from: https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Ethereum RPC URLs (use Alchemy, Infura, or your own node)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# NFT Contract Addresses
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x...your-nft-contract-address
NEXT_PUBLIC_CHAIN_ID=1

# --------------------------------------------
# Authentication & Session
# --------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# --------------------------------------------
# Email Service (SendGrid, Resend, or AWS SES)
# --------------------------------------------
# Email Server (SMTP Configuration)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@citizenspace.com

# Using SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@citizenspace.com

# OR Using Resend
RESEND_API_KEY=re_your_resend_api_key

# OR Using SMTP (Generic)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Email Templates
EMAIL_FROM_NAME=CitizenSpace
EMAIL_REPLY_TO=support@citizenspace.com

# --------------------------------------------
# SMS Notifications (Twilio)
# --------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# --------------------------------------------
# File Storage & CDN
# --------------------------------------------
# Using Supabase Storage
NEXT_PUBLIC_STORAGE_URL=your-supabase-storage-url

# OR Using AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=citizenspace-uploads

# --------------------------------------------
# Analytics & Monitoring
# --------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# LogRocket Session Replay
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# --------------------------------------------
# Rate Limiting & Security
# --------------------------------------------
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://citizenspace.com

# --------------------------------------------
# Feature Flags
# --------------------------------------------
ENABLE_NFT_VERIFICATION=true
ENABLE_MEMBERSHIP_CREDITS=true
ENABLE_CAFE_ORDERING=true
ENABLE_GUEST_PASSES=true

# --------------------------------------------
# Third-Party Integrations
# --------------------------------------------
# Calendar Integration (Google Calendar API)
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret

# Slack Notifications (for internal alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# --------------------------------------------
# Development & Testing
# --------------------------------------------
# Enable debug logging
DEBUG=false
LOG_LEVEL=info

# Seed Database on Startup
SEED_DATABASE=false

# Mock Payment Processing
MOCK_STRIPE_PAYMENTS=false

# Test Mode
TEST_MODE=false

# --------------------------------------------
# Cron Jobs & Background Tasks
# --------------------------------------------
# Enable scheduled tasks
ENABLE_CRON_JOBS=true

# Credit expiration check (daily at 00:00)
CRON_CREDIT_EXPIRATION=0 0 * * *

# Booking reminder emails (every 6 hours)
CRON_BOOKING_REMINDERS=0 */6 * * *

# --------------------------------------------
# API Rate Limits & Quotas
# --------------------------------------------
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# --------------------------------------------
# Cache Configuration (Redis)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL (in seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=citizenspace
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# --------------------------------------------
# Environment-Specific Overrides
# --------------------------------------------
# These can be different per environment (dev/staging/prod)

# Development
# DATABASE_URL=postgresql://postgres:password@localhost:5432/citizenspace_dev

# Staging
# DATABASE_URL=postgresql://postgres:password@staging-db:5432/citizenspace_staging

# Production
# DATABASE_URL=postgresql://postgres:password@prod-db:5432/citizenspace_prod